    using System;

    namespace Kata
    {
        public class MoveZeroes
        {
            public static int[] MoveZeroesToTheRight(int[] array)
            {
                int[] newArray = new int[array.Length];
                int nonZeroIndex = 0;
                int zeroIndex = array.Length - 1;

                for (int i = 0; i < array.Length; i++)
                {
                    if (array[i] != 0)
                    {
                        newArray[nonZeroIndex] = array[i];
                        nonZeroIndex++;
                    }
                    else
                    {
                        newArray[zeroIndex] = array[i];
                        zeroIndex--;
                    }
                }

                return newArray;
            }
        }
    }
